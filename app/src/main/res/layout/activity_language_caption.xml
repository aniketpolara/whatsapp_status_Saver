<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ToolbarStyle">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/toolbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="@string/captions"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_main">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="@dimen/_10sdp">

                    <ImageView
                        android:id="@+id/english"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:src="@drawable/c_english"
                        android:adjustViewBounds="true"
                        android:layout_margin="@dimen/_10sdp"/>
                    <ImageView
                        android:id="@+id/gujarati"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/c_gujarati"
                        android:layout_margin="@dimen/_10sdp"/>

                    <ImageView
                        android:id="@+id/hindi"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:src="@drawable/c_hindi"
                        android:layout_margin="@dimen/_10sdp"/>
                    <ImageView
                        android:id="@+id/panjabi"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/s_panjabi"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/tamil"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/c_tamil"
                        android:layout_margin="@dimen/_10sdp"/>
                    <ImageView
                        android:id="@+id/telugu"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/c_telegu"
                        android:layout_weight="1"/>
                    <ImageView
                        android:id="@+id/urdu"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/c_urdu"
                        android:layout_margin="@dimen/_10sdp"/>
                    <ImageView
                        android:id="@+id/marathi"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/c_marathi"
                        android:layout_margin="@dimen/_10sdp"/>


                </LinearLayout>



            </LinearLayout>

        </RelativeLayout>
    </ScrollView>

</LinearLayout>
