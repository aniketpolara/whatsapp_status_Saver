<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:id="@+id/ll_main"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:theme="@style/ToolbarStyle">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/toolbar_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:fontFamily="@font/poppins_medium"
                android:gravity="center"
                android:text="@string/fancy_chat_style"
                android:textColor="@color/black"
                android:textSize="18sp" />
        </androidx.appcompat.widget.Toolbar>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_main"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ll_caption"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="6dp"
                android:src="@drawable/caption" />

            <ImageView
                android:id="@+id/ll_art"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="6dp"
                android:src="@drawable/art_icon" />

            <ImageView
                android:id="@+id/ll_style_txt"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="6dp"
                android:src="@drawable/stylist_txt_icon" />

            <ImageView
                android:id="@+id/ll_name"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="6dp"
                android:src="@drawable/name_icon" />

            <ImageView
                android:id="@+id/ll_emotion"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="6dp"
                android:src="@drawable/emotiontext" />

            <ImageView
                android:id="@+id/ll_numeric"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="6dp"
                android:src="@drawable/numeric_icon" />

            <ImageView
                android:id="@+id/ll_mirror"
                android:layout_width="wrap_content"
                android:layout_height="75dp"
                android:layout_margin="6dp"
                android:src="@drawable/mirror_icon" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
