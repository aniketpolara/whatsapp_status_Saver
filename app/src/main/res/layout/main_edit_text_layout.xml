<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:background="@drawable/btn_bg"
    android:padding="10dp">

    <RelativeLayout
        android:id="@+id/rlv_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/iv_pencil"
            style="@style/iv_pencil"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"/>

        <EditText
            android:id="@+id/main_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="10dp"
            android:layout_toEndOf="@+id/iv_pencil"
            android:background="@null"
            android:cursorVisible="true"
            android:focusable="true"
            android:hint="@string/enter_your_text_here"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="16sp" />
    </RelativeLayout>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/rlv_line"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:visibility="visible" />
</RelativeLayout>
